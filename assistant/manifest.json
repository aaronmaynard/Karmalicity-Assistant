{
	"name": "Karmalicity Assistant",
	"version": "1.0.0",
	"description": "A karmalicity viewing assistant by Aaron Maynard.  Uses browser API to collect and share data across tabs.",
	"permissions": ["clipboardRead", "clipboardWrite", "tabs", "activeTab", "storage"],
	"background": {
      "scripts": ["background.js"],
	  "persistent": true
    },
	"content_scripts": [ {
		"matches": ["<all_urls>"],
		"js": ["contentScript.js"]
	} ],
    "browser_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
	"manifest_version": 2
}
